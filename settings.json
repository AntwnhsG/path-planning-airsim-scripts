          "DataFrame": "SensorLocalFrame"
        },
        "LidarSensor_Up": {
          "SensorType": 6,
          "Enabled": true,
          "NumberOfChannels": 4,
          "RotationsPerSecond": 10,
          "PointsPerSecond": 100000,
          "range": 5,
          "X": 0,
          "Y": 0,
          "Z": 0,
          "Roll": 0,
          "Pitch": 90,
          "Yaw": 0,
          "VerticalFOVUpper": -15,
          "VerticalFOVLower": 15,
          "HorizontalFOVStart": -15,
          "HorizontalFOVEnd": 15,
          "DrawDebugPoints": true,
          "DataFrame": "SensorLocalFrame"
        }
      }
    }
  }
